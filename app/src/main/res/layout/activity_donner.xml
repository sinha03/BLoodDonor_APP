<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAFFFF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/textnew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:text="Add donner details :"
            android:textSize="40px"
            android:textStyle="normal"
            android:textColor="#AE0404"/>


        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="40px"
            android:textStyle="normal"
            android:textColor="#AE0404"
            android:layout_below="@+id/textnew"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />


        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:inputType="text"
            android:textSize="40px"
            android:textStyle="normal"
            android:textColor="#AE0404"
            android:layout_alignBottom="@+id/textViewName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">
        </EditText>
        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="40px"
            android:textStyle="normal"
            android:textColor="#AE0404"
            android:layout_below="@+id/textViewName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true" />

        <AutoCompleteTextView
            android:id="@+id/editTextGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextName"
            android:layout_below="@+id/editTextName"
            android:ems="10"
            android:textSize="40px"
            android:textStyle="normal"
            android:textColor="#AE0404"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

        </AutoCompleteTextView>


        <TextView
            android:id="@+id/textViewloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="40px"
            android:textStyle="normal"
            android:textColor="#AE0404"
            android:layout_below="@+id/textViewGender"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true" />

        <AutoCompleteTextView
            android:id="@+id/editTextloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
            android:textSize="40px"
            android:textStyle="normal"
            android:textColor="#AE0404"
            android:layout_alignBottom="@+id/textViewloc"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editTextGender"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/editTextGender">

        </AutoCompleteTextView>


        <TextView
            android:id="@+id/textViewblood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood_group"
            android:textSize="40px"
            android:textStyle="normal"
            android:textColor="#AE0404"
            android:layout_below="@+id/textViewloc"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true" />

        <AutoCompleteTextView
            android:id="@+id/editTextblood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="40px"
            android:textStyle="normal"
            android:textColor="#AE0404"
            android:layout_below="@+id/editTextloc"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editTextloc"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/editTextloc" />

        <TextView
            android:id="@+id/textViewphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone_number"
            android:textSize="40px"
            android:textStyle="normal"
            android:textColor="#AE0404"
            android:layout_below="@+id/textViewblood"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true" />


        <EditText
            android:id="@+id/editTextphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="40px"
            android:textStyle="normal"
            android:textColor="#AE0404"
            android:layout_alignBottom="@+id/textViewphone"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editTextblood"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/editTextblood">

        </EditText>


        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:onClick="run"
            android:text="@string/save"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#00FFFF"
            android:background="#AE0404" />



    </RelativeLayout>

</ScrollView>